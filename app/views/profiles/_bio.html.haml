- profile ||= @profile
.activity_box.learn
  .left.avatar= icon profile, :big
  .right.bio_stuff
    %h1= h profile.f
    - unless profile.last_activity_at.blank? 
      %small== Last seen #{time_ago_in_words profile.last_activity_at} ago
	  
    %h3= location_link profile
    - unless profile.about_me.blank? 
      %div
        %strong About:
        = sanitize(textilize(profile.about_me)) 
    - unless profile.website.blank?		    
      %div
        %strong Website:
        = link_to h(profile.website), h(profile.website) 
    - unless profile.blog.blank? 
      %div
        %strong Blog:
        = link_to h(profile.blog), h(profile.blog)
   
    - unless profile.flickr.blank? 
      %div 
        %strong Flickr:
        = link_to h(profile.flickr), h(profile.flickr) 
    - unless profile.aim_name.blank? 
      %div
        %strong AIM:
        %a{ :href=>"aim:goim?screenname=#{ h profile.aim_name }"} 
          = h profile.aim_name
    - unless profile.gtalk_name.blank? 
      %div
        %strong GTalk:
        %a{ :href=>"xmpp:#{h profile.gtalk_name}" }
          =h profile.gtalk_name 
    - unless profile.ichat_name.blank? 
      %div 
        %strong iChat:
        %a{ :href=>"ichat:#{h profile.ichat_name}" }
          =h profile.ichat_name

  .clear
